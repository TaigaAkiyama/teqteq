<% if current_user.like?(answer) %>
  <%= form_with(model: current_user.favorites.find_by(answer_id: answer.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :answer_id, answer.id %>
    <%= f.submit 'お気に入りから削除', class: 'btn btn-danger btn-sm' %>
    <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
    <%= hidden_field_tag :answer_id, answer.id %>
    <%= f.submit 'お気に入りに追加', class: 'btn btn-primary btn-sm' %>
  <% end %>
<% end %>