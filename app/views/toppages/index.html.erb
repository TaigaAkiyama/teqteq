<div class="jumbotron">
  <div class="container">
    <div class="text-center">
      <h1>teq teq</h1>
    
      <% if logged_in? %>
        <%= link_to('質問一覧', '/questions') %>
      <% else %>
        <%= link_to '新規登録', signup_path, class: 'btn btn-lg btn-primary' %>
      <% end %>
    </div>
  </div>  
</div>
<div class="questions">
  <div class="text-center">
    <% @search_questions.each do |question| %>
      <li class="media mb-3">
          <img class="mr-2 rounded">
          <div class="media-body">
            <div>
              <%= link_to question.user.name, user_path(question.user) %> <span class="text-muted">投稿日 <%= question.created_at %></span>
            </div>
            <div>
              <p><%= question.title %></p>
              <%= link_to("詳細", "/questions/#{question.id}") %>
            </div>
          </div>
      </li>
    <% end %>
  </div>  
</div>