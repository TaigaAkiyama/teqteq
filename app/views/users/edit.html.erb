<div class="text-center">
  <h1>プロフィールを編集</h1>
    <%= form_with(model: @user, local: true) do |f| %>
       <div class="form-group">
        <%= f.text_area :profile, class: 'form-control' %>
       </div>
       <%= f.submit '更新', class: 'btn btn-primary' %>
    <% end %>
  <%= link_to 'ユーザ詳細に戻る', user_path(@user) %>
</div>

